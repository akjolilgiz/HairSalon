@{
  Layout = "_Layout";
}
<hr />
<h2>Edit item: @Model["Client"].clientName</h2>
<form action="/clients/@Model["Client"].id/update" method="post">
    <label for="updateName">Name:</label>
    <input type="text" name="updateName" value="@Model["Client"].clientName">
    <select name="stylist">
      @foreach (var stylist in Model["Stylist"])
      {
        <option value=@stylist.id>@stylist.name</option>
      }
    </select>
    <button type="submit">Edit</button>
</form>

<h4><a href="/">Return home</a></h4>
